
<div class = "mapbody"
  id="map"
  style="width: 100%;
  height: 45vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
>
<div id="menu">
<input
id="streets-v11"
type="radio"
name="rtoggle"
value="streets"
checked="checked"
/>
<label for="streets">streets</label>
<input id="light-v10" type="radio" name="rtoggle" value="light" />
<label for="light">light</label>
<input id="dark-v10" type="radio" name="rtoggle" value="dark" />
<label for="dark">dark</label>
<input id="outdoors-v11" type="radio" name="rtoggle" value="outdoors" />
<label for="outdoors">outdoors</label>
<input id="satellite-v9" type="radio" name="rtoggle" value="satellite" />
<label for="satellite">satellite</label>
</div>
</div>
<div class="container">
      <div class="row">
        <div class="col-sm-8 offset-sm-2">
          <form class="d-flex align-items-center">
            <!-- <input type="text" id="city-input" placeholder="Enter city"> -->
            <select id="city-input" class="select2"></select>
            <input type="submit" value="Get the weather" class="btn btn-primary ml-3">
          </form>
          <div class="card mt-4 mb-5">
            <div class="card-body">
              <h1>Weather in <span id="city"></span></h1>
              <h3 id="date" class="gray-text"></h3>
              <div id="weather">
                <p id="description"></p>
                <div class="d-flex">
                  <img src="" alt="Weather Icon" id="icon">
                  <h2 id="temperature"></h2>
                </div>
              </div>
            </div>
          </div>
          <a href="" class="btn btn-success w-100" id="current-location">Get current weather in your city</a>
        </div>
      </div>
    </div>




