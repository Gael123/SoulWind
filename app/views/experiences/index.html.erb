



<div class = "mapbody"
  id="map"
  style="width: 100%;
  height: 45vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  >
  </div>

<div id="geocoder" class="geocoder"></div>


 <br />
<%= form_tag experiences_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control search-form",
          placeholder: "find an experience"
        %>
        <%= submit_tag "Search", class: "my-4 btn-solid btn-clean-border" %>
      <% end %>

 <% @experiences.each do |experience| %>
  <%= link_to "", new_experience_path(@experience), class: "card-clickable" %>
  <img src="<%= cl_image_path experience.photo, crop: :fill %>" alt="">
  <h2><%= link_to experience.content, experience %></h2>
              <p id="text"><%= experience.gear %></p>
               <%= cl_image_tag experience.user.photo, class: "card-trip-user avatar-bordered" %>
               <% end %>


